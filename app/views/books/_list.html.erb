<table class="table table-hover table-inverse">
  <thead>
        <tr>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Edit", edit_book_path(book), class: 'btn btn-sm btn-success' %></td>
      <td><%= link_to "Delete", book_path(book), class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>