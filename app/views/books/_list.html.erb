<table class="table table-hover table-inverse">
  <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= link_to attachment_image_tag(book.user, :image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size: '40x40'), user_path(book.user) %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
      <% if book.user_id == current_user.id %>
      <td><%= link_to "Edit", edit_book_path(book), class: 'btn btn-sm btn-success' %></td>
      <td><%= link_to "Delete", book_path(book), class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>