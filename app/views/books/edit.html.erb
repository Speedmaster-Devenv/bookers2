<h1>Edit Book</h1>
<% if @book.errors.any? %>
  <p id="alert">
  <% @book.errors.full_messages.each do |message| %>
    <%= "error: #{message}" %>
  <% end %>
  </p>
<% end %>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
<% end %>
<%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>